!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xmlns:fb" => "http://www.facebook.com/2008/fbml"}
  %head
    %title Kato
    %link{:href => "http://fonts.googleapis.com/css?family=Gloria+Hallelujah", :rel => "stylesheet", :type => "text/css"}/
    = include_stylesheets :app
    /[if IE]
      %link{:href=>"/stylesheets/ie.css", :media=>"screen", :rel=>"stylesheet",  :type=>"text/css"}
    = csrf_meta_tag
  %body.list
    .page
      .whole
        = render :partial => 'layouts/header'
        .wrapper
          / %p.notice= notice
          / %p.alert= alert
          .main
            .content_list
              %h1#message_index Estas son las recetas más buenas que el pan
              %p.description
                Vota por tu receta de pan favorita y ayuda a nuestro jurado a escoger a los 5 finalistas que participar&aacute;n en la Gran Final de Mistura.
              = yield
        #footer
          = link_to "Términos y condiciones del concurso", terms_path, :class => "terms_button"
    %script{:src => "http://connect.facebook.net/en_US/all.js"}
    :erb
      <script type="text/javascript">
        var fb_token = '<%= fb_token %>';
      </script>
    :javascript

      window.fbAsyncInit = function() {

        FB.init({
        appId : '136578643087393',
        status : true, // check login status
        cookie : true, // enable cookies to allow the server to access the session
        xfbml : true // parse XFBML
        });

        window.setTimeout(function() {
          FB.Canvas.setAutoResize();
        }, 250);
      };

      (function() {
        var e = document.createElement('script'); e.async = true;
        e.src = document.location.protocol +
          '//connect.facebook.net/en_US/all.js';
        document.getElementById('fb-root').appendChild(e);
      }());


    = include_javascripts :app

    :erb
      <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-17178707-24']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
      </script>


